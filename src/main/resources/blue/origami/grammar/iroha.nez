/* Integer */
IntegerLiteral         = { (DECIMAL / HEXADECIMAL / BINARY / OCTAL) (INT_SUFFIX #LongExpr / FLOAT_SUFFIX #FloatExpr / #IntExpr) } _

DECIMAL                = '0' ![bBxX0-9_]
                       / [1-9] ( '_'* DIGIT )*
HEXADECIMAL            = '0' [xX] HEX ( '_'* HEX )*
BINARY                 = '0' [bB] [01] ( '_'* [01] )*
OCTAL                  = '0' ( '_'* [0-7] )*
DIGIT                  = [0-9]
HEX                    = [a-fA-F0-9]
INT_SUFFIX             = [lL]

