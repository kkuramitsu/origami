/* Literal */
public 
Constant = UnitLiteral
         / FloatLiteral
         / IntegerLiteral
         / BoolLiteral
         / TripleLiteral
         / CharLiteral
         / StringLiteral
         / NullLiteral


/* Null, True, False */

public NullLiteral  = { #NullExpr 'null' } _
public BoolLiteral  = { #TrueExpr 'true' } _
                    / { #FalseExpr 'false' } _
                                   
