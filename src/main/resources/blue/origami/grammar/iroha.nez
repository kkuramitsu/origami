/* Float */
public FloatLiteral        = { FLOAT  (FLOAT_SUFFIX #FloatExpr)? #DoubleExpr }  _
                       / { DECIMAL #DoubleExpr } FLOAT_SUFFIX _
FLOAT                  = FRACTION EXPONENT?
                       / DIGIT+ EXPONENT
FLOAT_SUFFIX           = [fFdD]
FRACTION               = !'_' ( '_'* DIGIT )* '.' DIGIT ( '_'* DIGIT )*
                       / DIGIT ( '_'* DIGIT )* '.'
EXPONENT               = [eE] [+\-]? DIGIT ( '_'* DIGIT )*

