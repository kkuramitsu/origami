'''

example FloatLiteral '''
1.234e2
'''

example FloatLiteral '''
123.4f
'''

/* Unit */
UnitLiteral            = { (FLOAT / DECIMAL) #NumberExpr } _ {$value $type(UnitType) #UnitLiteral} _

example UnitLiteral '''
123.4 [km]
'''

example UnitLiteral '''
123[km/h]
'''

/* Triple */

public TripleLiteral   = '\'\'\'' { $(TripleContent)* #StringCatExpr } '\'\'\''
TripleContent          = '${' Expression '}'
                       / '$[' Expression ']'
                       / { (!'\'\'\'' !'${' !'$[' .)* #StringExpr }

