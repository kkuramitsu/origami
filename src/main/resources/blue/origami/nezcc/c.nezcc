def newMemos = '''
static struct MemoEntry * newMemos(int size) {
  int cnt = 0;
  struct MemoEntry * memos = (struct MemoEntry *)_calloc(sizeof(struct MemoEntry), size);
  while(cnt < size) {
    memos[cnt].key = -1LL;
    cnt = cnt + 1;
  }
  return memos;
}
'''

